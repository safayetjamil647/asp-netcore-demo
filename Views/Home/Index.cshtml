@model IEnumerable<Employee>
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";
}

<div class="row">
    <div class="col-sm-6">
        @foreach (var employee in Model)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Emplyee Name: @employee.Name</h5>
                    <p class="card-text">Emplyee Department: @employee.Department</p>
                    
                    <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-primary">Delete</a>
                </div>
            </div>
        }
        </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}